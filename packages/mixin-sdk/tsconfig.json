  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "outDir": "build",
    "moduleResolution": "node",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "__tests__"]
}