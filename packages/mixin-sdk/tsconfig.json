{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "outDir": "build",
    "moduleResolution": "node",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "allowJs": true,
    "lib": ["dom", "dom.iterable", "es2015", "es2016", "es2017"],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["__tests__"]
}