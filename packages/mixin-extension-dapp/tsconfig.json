{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "outDir": "build",
    "moduleResolution": "node",
    "declaration": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@foxone/mixin-extension-base": ["../mixin-extension-base/src"],
      "@foxone/mixin-extension-base/*": ["../mixin-extension-base/src/*"],
      "@foxone/mixin-sdk": ["../mixin-sdk/src"],
      "@foxone/mixin-sdk/*": ["../mixin-sdk/src/*"],
    },
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": ["node_modules", "__tests__"]
}