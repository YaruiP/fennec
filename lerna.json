{
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "allowBranch": [
        "main",
        "develop",
        "next"
      ],
      "message": "chore(release): publish %s"
    },
    "version": {
      "push": true,
      "conventionalCommits": true
    }
  },
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true
}
